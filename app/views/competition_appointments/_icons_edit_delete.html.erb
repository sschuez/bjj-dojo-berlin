<!-- Icons edit & delete top -->
<div class="icons-top">
	
		<div class="icon-back">
		<%= link_to competition_path(@competition), class: "btn btn-back" do %>
			<i class="fas fa-arrow-left"></i>
		<% end %>
		</div>

	<div class="icon-edit">
	<%= link_to edit_competition_competition_appointment_path(@competition, @competition_appointment), class: "btn" do %>
	  <i class="fas fa-edit"></i>
	<% end %>
	</div>

	<div class="icon-delete">
		<%= link_to competition_competition_appointment_path(@competition_appointment),
		      method: :delete,
		      data: { confirm: "Are you sure you want to remove registration for #{@competition.name.upcase} for #{@user.first_name.upcase} #{@user.last_name.upcase}?" },
		      class: "btn" do %>
				<i class="fas fa-trash-alt"></i>
		<% end %>
	</div>
</div>