<div class="container">

	<div class="row align-items-center bg-white py-3 rounded-lg shadow-sm" id="name-card">

    <!-- Avatar -->
    <div class="col-3 mb-3 ml-1">
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/cveneziani", class: "avatar-large", alt: "avatar-large" %>
    </div>
    
    <!-- Name -->
    <div class="col-7">
      <h1><%= @user.first_name %> <%= @user.last_name %></h1>
      <p><%= mail_to @user.email %></p>
    </div>
    
		<!-- Badge showing if admin or student -->
    <% if @user.admin == true %>
	    <div class="user-admin">
	      <h2 class="badge-admin"><strong>Admin</strong></h2>
	    </div>	  
     <% else %>
			<div class="student-admin">
	      <h2 class="badge-admin"><strong>Student</strong></h2>
	    </div>
     <% end %>
  
  </div>

	<br>

	<div class="row row-cols-1 row-cols-md-2">
	  
	  <!-- Card personal details -->
	  <div class="col mb-4">
	    <div class="card border-0 b rounded-lg shadow-sm">
	      <div class="card-body">
	        <h5 class="card-title">Personal Info</h5>
	        <br>
	        <p class="card-text">Birthday: <%= @user.date_of_birth.strftime("%d.%m.%Y") %></p>
	        <p class="card-text">Age: <%= @user.age? %></p>
	        <p class="card-text">Phone: <%= @user.phone %></p>
	      </div>
	    </div>
	  </div>
	  
	  
		<!-- Club details -->
		<div class="col mb-4">
	    <div class="card border-0 b rounded-lg shadow-sm">
	      <div class="card-body">
	        <h5 class="card-title">Club affiliation</h5>
	        <br>
	        <p class="card-text">Member since: <%= @user.started.strftime("%d.%m.%Y") %></p>
	        <p class="card-text">Joined <strong><%= @user.date_diff(@user.started, Date.today) %></strong> ago</p>
	        <p class="card-text">Profile created: <%= @user.created_at.strftime("%d.%m.%Y") %></p>

	        <p class="card-text">Active: <%= @user.active_member %></p>
	        <p class="card-text">Why (not active): <%= @user.not_active_why %></p>
	      </div>
	    </div>
	  </div>

		<!-- BJJ level -->
		<div class="col mb-4">
	    <div class="card border-0 b rounded-lg shadow-sm">
	      <div class="card-body">
	        <h5 class="card-title">BJJ level</h5>
	        <br>
	        <p class="card-text">Belt: <%= @user.belt %></p>
	        <p class="card-text">Last promotion: <%= @user.last_promotion.strftime("%d.%m.%Y") %></p>
	        <p class="card-text">Promoted <strong><%= @user.date_diff(@user.last_promotion, Date.today) %></strong> ago</p>
	      </div>
	    </div>
	  </div>

	  	<!-- Measurements -->
		<div class="col mb-4">
	    <div class="card border-0 b rounded-lg shadow-sm">
	      <div class="card-body">
	        <h5 class="card-title">Measurements</h5>
	        <br>
	        <p class="card-text">Height: <%= @user.height %></p>
	        <p class="card-text">Weight: <%= @user.weight %></p>
	        <p class="card-text">Weight good: <%= @user.weight_good %></p>
	        <p class="card-text">Reasons: <%= @user.reasons_for_weight %></p>
	      </div>
	    </div>
	  </div>

